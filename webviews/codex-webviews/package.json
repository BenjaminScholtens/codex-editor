{
    "name": "my-vite-project",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build:ParallelView": "cross-env APP_NAME=ParallelView vite build",
        "build:CodexChunkEditor": "cross-env APP_NAME=CodexChunkEditor vite build",
        "build:SemanticView": "cross-env APP_NAME=SemanticView vite build",
        "build:TranslationNotesView": "cross-env APP_NAME=TranslationNotesView vite build",
        "build:ChatView": "cross-env APP_NAME=ChatView vite build",
        "build:CommentsView": "cross-env APP_NAME=CommentsView vite build",
        "build:all": "npm run build:ParallelView && npm run build:TranslationNotesView && npm run build:SemanticView && npm run build:ChatView && npm run build:CommentsView && npm run build:CodexChunkEditor",
        "watch:all": "nodemon --watch src --ext ts,tsx --exec npm run build:all",
        "watch:ChatView": "nodemon --watch src --ext ts,tsx --exec npm run build:ChatView",
        "watch:CodexChunkEditor": "nodemon --watch src --ext ts,tsx --exec npm run build:CodexChunkEditor",
        "watch:SemanticView": "nodemon --watch src --ext ts,tsx --exec npm run build:SemanticView",
        "watch:TranslationNotesView": "nodemon --watch src --ext ts,tsx --exec npm run build:TranslationNotesView",
        "watch:CommentsView": "nodemon --watch src --ext ts,tsx --exec npm run build:CommentsView",
        "watch:ParallelView": "nodemon --watch src --ext ts,tsx --exec npm run build:ParallelView",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview"
    },
    "dependencies": {
        "@vscode/webview-ui-toolkit": "^1.4.0",
        "diff": "^5.2.0",
        "dompurify": "^3.0.9",
        "framer-motion": "^11.0.15",
        "marked": "^12.0.0",
        "quill": "^2.0.2",
        "quill-delta": "^5.1.0",
        "quilljs-markdown": "^1.2.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "rehype-parse": "^9.0.0",
        "rehype-remark": "^10.0.0",
        "remark": "^15.0.1",
        "remark-html": "^16.0.1",
        "remark-stringify": "^11.0.0",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/diff": "^5.2.1",
        "@types/dompurify": "^3.0.5",
        "@types/lodash": "^4.17.7",
        "@types/quill": "^2.0.14",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@types/react-speech-recognition": "^3.9.5",
        "@types/turndown": "^5.0.5",
        "@types/vscode-webview": "^1.57.0",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "@vitejs/plugin-react": "^4.2.1",
        "cross-env": "^7.0.3",
        "eslint": "^8.55.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "nodemon": "^3.0.2",
        "typescript": "^5.2.2",
        "vite": "^5.0.8"
    }
}
